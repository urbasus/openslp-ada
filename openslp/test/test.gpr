with "..\libslp\slp.gpr";
with "..\libslpattr\slp_attr.gpr";

project Test is

   for Languages use ("C");
   for Object_Dir use "obj";
   for Exec_Dir use "bin";
   for Source_Dirs use (".", "SLP_attr_test", "SLPD_predicate_test", "SLPDereg", "SLPEscape", "SLPFindAttrs", "SLPFindSrvs", "SLPFindSrvTypes", "SLPParseSrvURL", "SLPReg", "SLPUnescape");
   for Main use ("slp_attr_test.c", "slpd_predicate_test.c", "SLPDereg.c", "SLPEscape.c", "SLPFindAttrs.c", "SLPFindSrvs.c", "SLPFindSrvTypes.c", "SLPParseSrvURL.c", "SLPReg.c", "SLPUnescape.c");

   SLP_Version := external ("SLP_Version", """0.0.0""");

   package Compiler is
      -- switches for MinGW build
      for Switches ("c") use ("-DSLP_VERSION=" & SLP_Version);
   end Compiler;

   package Linker is
      -- switches for MinGW build
      for Switches ("c") use ("-lws2_32", "-liphlpapi");
   end Linker;

end Test;

